{% extends "form-element.html.twig" %}
{% set attributes = attributes.addClass('mdc-textfield').setAttribute('data-mdc-auto-init', 'MDCTextfield') %}
{% set description_classes = [
  'mdc-textfield-helptext',
  persistent_helptext? 'mdc-textfield-helptext--persistent'
] %}
{% if description %}
  {% set description = description|merge(description.attributes.addClass(description_classes)) %}
{% endif %}