<header class="mdc-temporary-drawer__header system--branding">
  <div class="mdc-temporary-drawer__header-content mdc-theme--primary-bg mdc-theme--text-primary-on-primary">
    <div>
        {% if site_logo %}
            <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">
                <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" class="branding--logo"/>
            </a>
        {% endif %}
    </div>
    {% if site_name %}
        <h2 class="mdc-typography--title">
            <a href="{{ path('<front>') }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
        </h2>
    {% endif %}
    <h2 class="mdc-typography--caption">{{ site_slogan }}</h2>
  </div>
</header>
