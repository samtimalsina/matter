{#
/**
 * @file
 * Theme override for displaying a tablesort indicator.
 *
 * Available variables:
 * - style: Either 'asc' or 'desc', indicating the sorting direction.
 */
#}
{%
  set classes = [
    'tablesort',
    'material-icons',
  ]
%}
{%
  set icon = (style == 'asc') ? 'arrow_downward' : 'arrow_upward'
%}
<span{{ attributes.addClass(classes) }}>
  {{ icon }}
  <span class="visually-hidden">
    {% if style == 'asc' -%}
      {{ 'Sort ascending'|t }}
    {% else -%}
      {{ 'Sort descending'|t }}
    {% endif %}
  </span>
</span>
